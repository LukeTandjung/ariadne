{
    "name": "ariadne",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "workspaces": ["packages/*"],
    "scripts": {
        "build": "tsc --build",
        "dev": "tsc --build --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "tsc": "tsc --build",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "release": "bumpp -r --commit --push --tag",
        "prepare": "husky && effect-language-service patch",
        "ci:version": "changeset version && bun update",
        "ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun publish || true); done && changeset tag"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@effect/eslint-plugin": "^0.3.2",
        "@effect/platform-bun": "^0.87.1",
        "@tim-smart/openapi-gen": "^0.4.13",
        "@types/bun": "^1.3.7",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "bumpp": "^10.4.0",
        "eslint": "^9.39.2",
        "husky": "^9.1.7",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LukeTandjung/ariadne.git"
    },
    "homepage": "https://github.com/LukeTandjung/ariadne#readme",
    "dependencies": {
        "@effect/language-service": "^0.72.0",
        "effect": "^3.19.15"
    }
}
